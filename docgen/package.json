{
  "name": "@darlean/docgen",
  "version": "2.0.0-alpha.0",
  "description": "Documentation generator based on TypeDoc json output in javadoc-like style",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "docgen": "lib/bin.js"
  },
  "scripts": {
    "test": "",
    "build": "shx rm -rf lib/* && tsc",
    "run": "node lib/index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx",
    "prepublish": "npm run build",
    "prepublishOnly": "npm run build && npm test && npm run lint",
    "preversion": "npm run format && npm install && npm run lint && npm run build && npm test ",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "precommit": "npm run format && npm run lint && npm run build"
  },
  "keywords": [
    "Typedoc generator javadoc"
  ],
  "author": "Theo van der Donk",
  "license": "Apache-2.0",
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^4.3.0"
  },
  "devDependencies": {
    "@types/marked": "^4.3.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.23.28",
    "typescript": "^4.9.5"
  },
  "files": [
    "lib/**/*",
    "NOTICE"
  ]
}
